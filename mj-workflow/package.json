{
  "name": "mj-workflow",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun run build:server && bun run build:web && bun run build:public",
    "build:server": "bun build src/index.ts --outdir ./dist --target bun",
    "build:web": "bun build src/public/app.ts --outdir ./dist/public/assets --target browser --format esm",
    "build:public": "mkdir -p dist/public/assets && cp src/public/index.html dist/public/index.html",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
